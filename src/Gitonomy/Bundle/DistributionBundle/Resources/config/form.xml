<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="gitonomy_distribution.form.type.configurator_step_mailer" class="Gitonomy\Bundle\DistributionBundle\Form\Type\StepMailerType">
            <tag name="form.type" alias="configurator_step_mailer" />
        </service>
        <service id="gitonomy_distribution.form.type.configurator_step_gitonomy" class="Gitonomy\Bundle\DistributionBundle\Form\Type\StepGitonomyType">
            <tag name="form.type" alias="configurator_step_gitonomy" />
        </service>
        <service id="gitonomy_distribution.form.type.repository_path" class="Gitonomy\Bundle\DistributionBundle\Form\Type\RepositoryPathType">
            <tag name="form.type" alias="repository_path" />
        </service>
        <service id="gitonomy_distribution.form.type.verification_mail" class="Gitonomy\Bundle\DistributionBundle\Form\Type\Verification\MailType">
            <tag name="form.type" alias="verification_mail" />
        </service>
    </services>

</container>
