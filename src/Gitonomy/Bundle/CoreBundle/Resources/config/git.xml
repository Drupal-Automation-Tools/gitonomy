<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_core.git.system.class">Gitonomy\Bundle\CoreBundle\Git\System\NativeSystem</parameter>
        <parameter key="gitonomy_core.git.repository_pool.class">Gitonomy\Bundle\CoreBundle\Git\RepositoryPool</parameter>
        <parameter key="gitonomy_core.git.authorized_keys_generator.class">Gitonomy\Bundle\CoreBundle\Git\AuthorizedKeysGenerator</parameter>
        <parameter key="gitonomy_core.git.shell_command">php %kernel.root_dir%/console gitonomy:git</parameter>
    </parameters>

    <services>
        <service id="gitonomy_core.git.system" class="%gitonomy_core.git.system.class%" />

        <service id="gitonomy_core.git.repository_pool" class="%gitonomy_core.git.repository_pool.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="gitonomy_core.git.system" />
            <argument>%gitonomy_core.git.repository_path%</argument>
        </service>

        <service id="gitonomy_core.git.authorized_keys_generator" class="%gitonomy_core.git.authorized_keys_generator.class%">
            <argument type="service" id="doctrine" />
            <argument>%gitonomy_core.git.shell_command%</argument>
        </service>
    </services>

</container>
