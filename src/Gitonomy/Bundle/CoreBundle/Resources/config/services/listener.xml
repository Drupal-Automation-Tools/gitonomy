<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_core.kernel.listener.thread.class">Gitonomy\Bundle\CoreBundle\Listener\ThreadListener</parameter>
    </parameters>
    <services>
        <service id="gitonomy_core.kernel.listener.thread" class="%gitonomy_core.kernel.listener.thread.class%">
            <argument type="service" id="doctrine" />
            <argument type="service" id="gitonomy_core.git.repository_pool" />
            <tag name="kernel.event_listener" event="gitonomy.git_create" method="create" />
            <tag name="kernel.event_listener" event="gitonomy.git_write" method="write" />
        </service>
    </services>
</container>
