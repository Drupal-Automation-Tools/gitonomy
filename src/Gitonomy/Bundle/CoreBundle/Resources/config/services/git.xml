<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_core.git.repository_pool.class">Gitonomy\Bundle\CoreBundle\Git\RepositoryPool</parameter>
        <parameter key="gitonomy_core.git.repository_graph_pool.class">Gitonomy\Bundle\CoreBundle\Git\RepositoryGraphPool</parameter>
        <parameter key="gitonomy_core.git.shell_command">php %kernel.root_dir%/console gitonomy:git</parameter>
    </parameters>

    <services>
        <service id="gitonomy_core.git.repository_pool" class="%gitonomy_core.git.repository_pool.class%">
            <argument>%gitonomy_core.git.repository_path%</argument>
        </service>

        <service id="gitonomy_core.git.repository_graph_pool" class="%gitonomy_core.git.repository_graph_pool.class%">
            <argument type="service" id="snc_redis.git_graph_client" />
        </service>
    </services>

</container>
