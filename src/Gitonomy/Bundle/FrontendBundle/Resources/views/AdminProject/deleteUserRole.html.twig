{% extends "GitonomyFrontendBundle:AdminProject:layout.html.twig" %}

{% block title 'Delete user role' %}
{% set navigation_active = 'userRoles' %}

{% block content_right %}
    <div class="page-header">
        <h2>Remove {{ userRole.user.fullname }} from project {{ object.name }} ?</h2>
    </div>
    <form class="form-stacked" action="{{ path('gitonomyfrontend_adminproject_userRoles_delete', {'id':userRole.id}) }}" method="POST" novalidate>
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <input type="submit" class="btn danger" value="Delete" />
        <a href="{{ path('gitonomyfrontend_adminproject_edit', {'id':object.id}) }}" class="btn">Cancel</a>
    </form>
{% endblock %}
