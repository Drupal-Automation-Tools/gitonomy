{% block field_row %}
{% spaceless %}
    <div id="{{ id }}_field" class="clearfix{% if errors|length %} error{% endif %}">
        {{ form_label(form, label|default(null)) }}
        {{ form_widget(form, {'attr': field_attr|default({})}) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock field_row %}

{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% for error in errors %}
            <p><span class="help-inline">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span></p>
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}
