{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title 'security.login'|trans({}, 'security') %}
{% set navigation_active = null %}

{% block content_javascript %}
    <script type="text/javascript">
        jQuery(window).load(function (){
            jQuery("#_username").focus();
        });
    </script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="span4">
            <div class="page-header">
                <h1>Login</h1>
            </div>
            <form class="form-stacked" action="{{ path('gitonomyfrontend_security_loginCheck') }}" method="POST" novalidate>
                {{ form_widget(form) }}
                <p><input class="btn btn-primary" type="submit" name="login" value="{{ 'security.login'|trans({}, 'security') }}" /></p>
            </form>
            <p><a href="{{ path('gitonomyfrontend_security_forgotPassword') }}">Forgot your password?</a></p>
        </div>
    </div>
{% endblock %}
