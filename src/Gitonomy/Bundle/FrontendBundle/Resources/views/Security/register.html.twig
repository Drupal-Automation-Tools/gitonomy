{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title 'page.title'|trans({}, 'register') %}
{% set navigation_active = null %}

{% block content %}
    <h1>{{ 'title.register'|trans({}, 'register') }}</h1>
    <form class="form-stacked" action="{{ path('gitonomyfrontend_security_register') }}" method="POST" novalidate>
        {{ form_errors(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.fullname) }}
        {{ form_row(form.defaultEmail.email) }}
        {{ form_row(form.timezone) }}
        {{ form_row(form.password) }}
        {{ form_rest(form) }}
        <input type="submit" class="btn btn-success" value="{{ 'form.submit'|trans({}, 'register') }}" />
    </form>
{% endblock %}
