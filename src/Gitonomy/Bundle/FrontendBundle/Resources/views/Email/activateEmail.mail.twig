{% extends "GitonomyFrontendBundle::layout.mail.twig" %}

{% block subject parent() ~ 'You need to activate an email' | raw %}

{% block content_html %}
    {% set user = email.user %}
    Hey {{ user }},

    You registered a new email on {{ gitonomy.name }}.
    To fully use it, you have to activate it.

    <a href="{{ url('gitonomyfrontend_email_activate', {'username': user.username, 'hash': email.activation}) }}">Activate email {{ email }}</a>
{% endblock %}

