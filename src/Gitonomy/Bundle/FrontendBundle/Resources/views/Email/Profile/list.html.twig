<div class="page-header">
    <h2>Emails</h2>
</div>
<form class="form" action="{{ path('gitonomyfrontend_email_profile_list', {'userId':user.id}) }}" method="POST" id="user_email" novalidate>
    {{ form_errors(form) }}
    <table class="bordered-table zebra-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Default</th>
                <th>Activated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for email in user.emails %}
                <tr>
                    <td>{{ email.email }}</td>
                    <td>{% if email.isDefault == 1 %}{{'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
                    <td>{% if email.isActived == 1 %}{{'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
                    <td>
                        {% if not email.isDefault %}
                            {% if email.isActived %}
                                <a href="{{ path('gitonomyfrontend_email_profile_default', {'id': email.id }) }}" class="btn">as default</a>
                            {% else %}
                                <a href="{{ path('gitonomyfrontend_email_profile_sendactivation', {'id': email.id }) }}" class="btn">send activation</a>
                            {% endif %}
                            <a href="{{ path('gitonomyfrontend_email_profile_delete', {'id': email.id }) }}" class="btn danger">delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="3">{{ form_widget(form.email) }}</td>
                <td><input type="submit" class="btn success" value="Add" /></td>
            </tr>
        </tbody>
    </table>
    {{ form_rest(form) }}
</form>
