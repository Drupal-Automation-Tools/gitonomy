{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title 'page.delete.title'|trans({'%user%': object.fullname}, 'admin_user') %}
{% set navigation_active = null %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'title.delete'|trans({'%user%': object.fullname}, 'admin_user') }}</h1>
    </div>
    <form class="form-stacked" action="{{ path(route_prefix~'_delete', {'id':object.id}) }}" method="POST" novalidate>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        {% block admin_before_delete_form_end '' %}
        <input type="submit" class="btn btn-danger btn btn-danger" value="{{ 'button.delete'|trans({}, 'admin_user') }}" />
        <a href="{{ path(route_prefix~'_edit', {'id':object.id}) }}" class="btn">{{ 'button.back_to_list'|trans({}, 'admin_user') }}</a>
    </form>
{% endblock %}
