{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title 'Create new '~object_type %}
{% set navigation_active = null %}

{% block content %}
    <div class="page-header">
        <h1>Create new {{ object_type }}</h1>
    </div>
    <form class="form-stacked" action="{{ path(route_prefix~'_create') }}" method="POST" id="user" novalidate>
        <div class="row">
            {{ form_errors(form) }}
                <h2>User informations</h2>
            {{ form_row(form.username) }}
            {{ form_row(form.fullname) }}
            {{ form_row(form.timezone) }}
                <h2>Global roles</h2>
            {{ form_widget(form.globalRoles) }}
            {{ form_rest(form) }}
            <hr />
        </div>
        <input type="submit" class="btn btn-success" value="Create" />
        <a href="{{ path(route_prefix~'_list') }}" class="btn">Cancel</a>
    </form>
{% endblock %}
