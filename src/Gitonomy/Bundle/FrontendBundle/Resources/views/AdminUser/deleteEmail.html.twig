{% extends "GitonomyFrontendBundle:BaseAdmin:delete.html.twig" %}

{% block title 'Delete Email '~object.email %}

{% block content %}
    <div class="page-header">
        <h1>Delete Email "{{ object.email }}" ?</h1>
    </div>
    <form class="form-stacked" action="{{ path('gitonomyfrontend_adminuser_email_delete', {'id':object.user.id, 'emailId': object.id}) }}" method="POST" novalidate>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        {% block admin_before_delete_form_end '' %}
        <input type="submit" class="btn btn-danger
btn btn-danger" value="Delete" />
        <a href="{{ path('gitonomyfrontend_adminuser_email_list', {'id':object.user.id}) }}" class="btn">Cancel</a>
    </form>
{% endblock %}
