{% extends "GitonomyFrontendBundle:BaseAdmin:delete.html.twig" %}

{% block title 'page.delete_email.title'|trans({'%email%': object.email}, 'adimn_user') %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'title.delete_email'|trans({'%email%': object.email }, 'admin_user') }}</h1>
    </div>
    <form class="form-stacked" action="{{ path('gitonomyfrontend_adminuser_email_delete', {'id':object.user.id, 'emailId': object.id}) }}" method="POST" novalidate>
        {{ form_errors(form) }}
        {{ form_rest(form) }}
        {% block admin_before_delete_form_end '' %}
        <input type="submit" class="btn btn-danger btn btn-danger" value="{{ 'button.delete'|trans({}, 'admin_user') }}" />
        <a href="{{ path('gitonomyfrontend_adminuser_email_list', {'id':object.user.id}) }}" class="btn">{{ 'button.back_to_list'|trans({}, 'admin_user') }}</a>
    </form>
{% endblock %}
