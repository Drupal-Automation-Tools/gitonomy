{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title project.name ~ ' - Thread ' ~ thread.reference %}

{% block content %}
    <div class="page-header">
        <h1>{{ project.name }}</h1>
    </div>
    {% include "GitonomyFrontendBundle:Project:_navigation.html.twig" with {active: 'thread'} %}
    <div class="page-header">
        <h2>Thread</h2>
    </div>
    <div class="span8">
        {% for message in thread.messages %}
            {% include [
                "GitonomyFrontEndBundle:Project:ThreadMessage/"~message.name~".html.twig",
                "GitonomyFrontendBundle:Project:showThreadMessage.html.twig"
            ] with {message: message} %}
        {% endfor %}
    </div>
{% endblock %}
