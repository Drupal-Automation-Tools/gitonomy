{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title project.name ~ ' - Thread ' ~ thread.reference %}

{% block content %}
    <div class="page-header">
        <h1>{{ project.name }}</h1>
    </div>
    {% include "GitonomyFrontendBundle:Project:_navigation.html.twig" with {active: 'thread'} %}
    <div class="page-header">
        <h2>Thread</h2>
    </div>
    <div class="thead-message-list row show-grid">
        {% for message in thread.messages %}
            {% set template = "GitonomyFrontendBundle:ThreadMessage:"~message.name~".html.twig" %}
            {% include template with {message: message} %}
        {% endfor %}
    </div>
{% endblock %}
