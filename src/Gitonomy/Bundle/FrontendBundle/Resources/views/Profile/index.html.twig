{% extends "GitonomyFrontendBundle:Profile:layout.html.twig" %}

{% block title 'page.index.title'|trans({}, 'profile') %}
{% set navigation_active = 'index' %}

{% block column_right %}
    <div class="page-header">
        <h1>{{ 'title.index'|trans({}, 'profile') }} <small>{{ 'title.index.baseline'|trans({}, 'profile') }}</small></h1>
    </div>
    <ul>
        <li>
            <strong>{{ 'label.index.username'|trans({}, 'profile') }}</strong>
            {{ app.user.username }}
            -
            <a href="{{ path('gitonomyfrontend_profile_changeUsername') }}">
                {{ 'button.index.change_username'|trans({}, 'profile') }}
            </a>
        </li>
    </ul>
    <hr />
    <form action="{{ path('gitonomyfrontend_profile_index') }}" method="POST" novalidate class="form-stacked">
        {{ form_widget(form) }}
        <input class="btn btn-primary" type="submit" value="{{ 'form.profile.submit'|trans({}, 'profile') }}" />
    </form>
{% endblock %}
