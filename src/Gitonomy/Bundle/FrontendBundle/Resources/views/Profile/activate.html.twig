{% extends "GitonomyFrontendBundle::layout.html.twig" %}

{% block title 'Profile' %}
{% set navigation_active = null %}

{% block content %}
    <div class="page-header">
        <h1>Activation <small>Check your personal informations</small></h1>
    </div>
    <div class="row">
        {{ form_errors(form) }}
        <div class="span6">
            <form action="{{ path('gitonomyfrontend_profile_activate', {'username': user.username, 'token': user.activationToken}) }}" id="user" method="POST" novalidate class="form-stacked">
                <div class="page-header">
                    <h2>Set your password</h2>
                </div>
                {{ form_widget(form) }}
                {{ form_rest(form) }}
                <hr />
                <input class="btn primary" type="submit" value="Activate your account" />
            </form>
        </div>
        <div class="span9">
            <div class="page-header">
                <h2>User informations</h2>
            </div>
            <ul>
                <li><strong>Username:</strong> {{ user.username }}</li>
                <li><strong>Emails:</strong>
                    <ul>
                        {% for email in user.emails %}
                            <li>{{ email.email }}{% if email.isDefault %} <em>(default)</em>{% endif %}</li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
