{% extends "GitonomyFrontendBundle:Profile:layout.html.twig" %}

{% block title 'page.changeUsername.title'|trans({}, 'profile') %}
{% set navigation_active = 'index' %}

{% block column_right %}
    <div class="page-header">
        <h1>{{ 'title.changeUsername'|trans({}, 'profile') }}</h1>
    </div>
    <p>{{ 'paragraph.changeUsername.introduction'|trans({}, 'profile') }}</p>
    <form action="{{ path('gitonomyfrontend_profile_changeUsername') }}" method="POST">
        {{ form_widget(form) }}
        <p><input type="submit" class="btn btn-primary" value="{{ 'form.changeUsername.submit'|trans({}, 'profile') }}" /></p>
    </form>
{% endblock %}
