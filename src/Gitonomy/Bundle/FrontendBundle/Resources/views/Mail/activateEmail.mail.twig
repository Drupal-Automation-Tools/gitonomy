{% endblock %}

{% block body_html %}
    {% set user = email.user %}
    Hey {{ user }},

    You registered a new email on {# gitonomy.name #}.
    To fully use it, you have to activate it.

    <a href="{{ url('gitonomyfrontend_email_activate', {'id': email.id, 'hash': email.activation}) }}">Activate email {{ email }}</a>
{% endblock %}

