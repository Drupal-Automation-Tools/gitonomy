<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_frontend.form.type.profile_ssh_key.class">Gitonomy\Bundle\FrontendBundle\Form\Profile\SshKeyType</parameter>
        <parameter key="gitonomy_frontend.form.type.profile_informations.class">Gitonomy\Bundle\FrontendBundle\Form\Profile\InformationsType</parameter>
        <parameter key="gitonomy_frontend.form.type.user_registration.class">Gitonomy\Bundle\FrontendBundle\Form\User\RegistrationType</parameter>
        <parameter key="gitonomy_frontend.form.type.admin_user.class">Gitonomy\Bundle\FrontendBundle\Form\Admin\UserType</parameter>
        <parameter key="gitonomy_frontend.form.type.admin_project.class">Gitonomy\Bundle\FrontendBundle\Form\Admin\ProjectType</parameter>
        <parameter key="gitonomy_frontend.form.type.admin_role.class">Gitonomy\Bundle\FrontendBundle\Form\Admin\RoleType</parameter>
    </parameters>

    <services>
        <service id="gitonomy_frontend.form.type.profile_ssh_key" class="%gitonomy_frontend.form.type.profile_ssh_key.class%">
            <tag name="form.type" alias="profile_ssh_key" />
        </service>
        <service id="gitonomy_frontend.form.type.profile_informations" class="%gitonomy_frontend.form.type.profile_informations.class%">
            <tag name="form.type" alias="profile_informations" />
        </service>
        <service id="gitonomy_frontend.form.type.user_registration" class="%gitonomy_frontend.form.type.user_registration.class%">
            <tag name="form.type" alias="user_registration" />
        </service>
        <service id="gitonomy_frontend.form.type.admin_user" class="%gitonomy_frontend.form.type.admin_user.class%">
            <tag name="form.type" alias="admin_user" />
        </service>
        <service id="gitonomy_frontend.form.type.admin_project" class="%gitonomy_frontend.form.type.admin_project.class%">
            <tag name="form.type" alias="admin_project" />
        </service>
        <service id="gitonomy_frontend.form.type.admin_role" class="%gitonomy_frontend.form.type.admin_role.class%">
            <tag name="form.type" alias="admin_role" />
        </service>
    </services>

</container>
