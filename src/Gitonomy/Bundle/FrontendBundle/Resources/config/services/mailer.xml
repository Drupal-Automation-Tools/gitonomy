<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_frontend.mail_generator.class">Gitonomy\Bundle\FrontendBundle\Mail\TwigMailGenerator</parameter>
        <parameter key="gitonomy_frontend.mailer.class">Gitonomy\Bundle\FrontendBundle\Mail\Mailer</parameter>
        <parameter key="gitonomy_frontend.mail_sender.class">Gitonomy\Bundle\FrontendBundle\Mail\MailSender</parameter>
    </parameters>
    <services>
        <service id="gitonomy_frontend.mail_generator" class="%gitonomy_frontend.mail_generator.class%">
            <argument type="service" id="twig" />
        </service>
        <service id="gitonomy_frontend.mailer" class="%gitonomy_frontend.mailer.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="gitonomy_frontend.mail_generator" />
        </service>
        <service id="gitonomy_frontend.mail_sender" class="%gitonomy_frontend.mail_sender.class%" public="true">
            <argument type="service" id="gitonomy_frontend.mailer" />
            <argument>%gitonomy_frontend.mailer%</argument>
        </service>
    </services>

</container>
