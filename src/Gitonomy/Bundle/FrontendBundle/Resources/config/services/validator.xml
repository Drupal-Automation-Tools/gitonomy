<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gitonomy_frontend.validator.unique.class">Gitonomy\Bundle\FrontendBundle\Validator\Constraints\UniqueValidator</parameter>
    </parameters>

    <services>
        <service id="gitonomy_frontend.validator.unique" class="%gitonomy_frontend.validator.unique.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="unique" />
        </service>
    </services>
</container>
